= form_for @post, remote: true do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :body, "¿ Tienes algo en mente ?", class:"sr-only", for:"post_body"
    = f.text_area :body, class:"form-control", placeholder:"¿ Tienes algo en mente ?"
  .actions.text-right
    = f.submit 'Publicar', class:"btn btn-primary"
