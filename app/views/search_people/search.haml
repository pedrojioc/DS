.row.center-xs
  .col-sx-12.col-sm-10.col-md-8.col-lg-8
    .box
      .card
        %h4.card-header Resultados de la b√∫squeda
        .card-block
          %ul.list-group
            -if @people.empty?
              %p.card-text.text-muted No se encontraron resultados
            -@people.each do |person|
              %li.list-group-item
                %table
                  %tr
                    %td
                      =circle_img person.avatar.url(:thumb),50
                    %td.padding-left
                      %b=link_to person.name, person
                      %table
                        %tr
                          %td
                            %p.list-group-item-text.text-muted
                              =person.bio
                    %td
                    %td.padding-left